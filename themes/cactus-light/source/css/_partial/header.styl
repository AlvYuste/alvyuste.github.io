#header
  max-width: 710px
  width: 100%
  margin: 0 auto 3rem auto
  display: flex
  justify-content: center
  align-items: center
  text-transform: uppercase
  font-weight: lighter
  font-family: $font-family-accent
  font-size: 1rem
  &>*
    flex 1
  @media print
    display: none
  h1, h2
    letter-spacing: 0.01em
    margin-top: 0
    margin-bottom: 0
    text-align: center
    antialias()
  h1
    font-size: 2rem
    line-height: 2rem
    color: $color-text
    font-family: $font-family-special
    display: flex
    justify-content: center
    letter-spacing: -12px
    
    animation-name: spread
    animation-delay: 0.75s

    &, &>*
      animation-fill-mode:forwards;
      animation-duration: 1s
      transition: transform 1s ease

    .first
      transform: translateY(10px)
      animation-name: goup, appear
    .after
      opacity: 0
      animation-name: appear
      animation-duration: 1s
      animation-delay: 0.75s
    .last
      transform: translateY(-10px)
      animation-name: godown, appear

  h2
    font-size: 1.3rem
    line-height: 1.3rem
    color: $color-grey
    text-transform: uppercase
    opacity: 0
    animation: godown 1s 1s, appear 1s 1s;
    animation-fill-mode: forwards;    

  a
    color: inherit
    text-decoration: none
    background: none
    
  .nav
    opacity: 0
    animation: godown 1s 1.5s, appear 1s 1.5s;
    animation-fill-mode: forwards
    &:hover
      underline(1px, $color-accent)
      background-position: 0 15px;

@media screen and (max-width:480px)
  #header #title
    padding-top: (logo-height / 2) - 16
    padding-bottom: (logo-height / 2) - 16

@keyframes spread
  from
    letter-spacing: -12px
  to
    letter-spacing: 0px

@keyframes contract
  from
    letter-spacing: 0px
  to
    letter-spacing: -15px

@keyframes appear 
  from
    opacity: 0
  to
    opacity: 1

@keyframes disappear 
  from
    opacity: 1
  to
    opacity: 0

@keyframes godown
  from 
    transform: translateY(-10px)
  to
    transform: translateY(0px)

@keyframes goup
  from 
    transform: translateY(10px)
  to
    transform: translateY(0)

@keyframes arrange1
  from
    transform: translateY(0)
  to
    transform: translate(24px, -22px);
    
@keyframes arrange2
  from
    transform: translateY(0)
  to
    transform: translate(-20px);